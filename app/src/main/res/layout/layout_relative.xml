        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_toRightOf="@id/button25"
        android:text="@string/nine" />

    <Button
        android:textSize="40sp"
        android:id="@+id/button27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_toRightOf="@id/button26"
        android:width="90dp"
        android:height="122dp"
        android:background="@drawable/button"
        android:text="@string/divide" />
    <Button
        android:textSize="40sp"
        android:background="@drawable/button"
         android:height="122dp"
        android:width="90dp"
        android:id="@+id/button28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button26"
        android:layout_alignParentLeft="true"
        android:text="@string/four" />
    <Button
        android:textSize="40sp"
        android:background="@drawable/button"
         android:height="122dp"
        android:width="90dp"
        android:id="@+id/button29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button26"
        android:layout_toRightOf="@id/button28"
        android:text="@string/five" />
    <Button
        android:textSize="40sp"
        android:background="@drawable/button"
         android:height="122dp"
        android:width="90dp"
        android:id="@+id/button30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button26"
        android:layout_toRightOf="@id/button29"
        android:text="@string/six" />
    <Button
        android:textSize="40sp"
        android:background="@drawable/button"
         android:height="122dp"
        android:width="90dp"
        android:id="@+id/button31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button26"
        android:layout_toRightOf="@id/button30"
        android:text="@string/multiply" />
    <Button
        android:textSize="40sp"
        android:background="@drawable/button"
         android:height="122dp"
        android:width="90dp"
        android:id="@+id/button32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button31"
        android:layout_alignParentLeft="true"
        android:text="@string/one" />
    <Button
        android:textSize="40sp"
        android:background="@drawable/button"
         android:height="122dp"
