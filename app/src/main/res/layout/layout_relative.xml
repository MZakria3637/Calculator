        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:width="90dp"
        android:height="122dp"
        android:background="@drawable/button"
        android:text="@string/seven" />

    <Button
        android:textSize="40sp"
        android:background="@drawable/button"
